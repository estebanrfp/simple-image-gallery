doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='Pragma', content='no-cache')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')

    title!= title
    link(rel='stylesheet', href='/styles.css')
  body
    .main
      .sidebar-hover
        p.pagination
          span.page 01
          |  / 
          span.total-pages 08
      .sidebar-real
        //- .nav-elem.nav-1.active(data-page='00', style='background-image: url(http://i.imgur.com/c07asTW.jpg);')
        each item, i in items
          //- .nav-elem.nav-test(data-page='#{i}')
          div(class=`nav-elem nav-${i + 1}`, data-page=`${i + 1}`)
            img(src=item.live_preview_url, width="160px")
      .sections
        //- .section.section-00
        //-   .left-part
        //-   .content
        //-     .bg-part(style='background-image: url(http://i.imgur.com/c07asTW.jpg);')
        //-     h2.section-heading desarrolloactivo.com
        //-     p.additional-text Investigación y desarrollo de tecnologías para la web
        each item, i in items
          div(class="section section-#{i+1}")
            //- .left-part(style='background-image: url( #{item.live_preview_url} );')
            .content
              .bg-part(style='background-image: url('+item.live_preview_url+');')

              h2.section-heading
                a.link(href='', target='_blank') #{item.item}
              //- p.additional-text #{item.cost}
              //- p.check-out.additional-text
              //-   a(href='', target='_blank') evanto link

      h2.scroll-down

    script(src='https://code.jquery.com/jquery-1.8.0.min.js')
    script(async, defer, src='/gal.js')